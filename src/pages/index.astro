---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Loop — The Effortless Window Manager for macOS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Download for macOS',
        href: 'https://github.com/MrKai77/Loop/releases/latest/download/Loop.zip',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Explore Features', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'Loop Hero Image' }}
  >
    <Fragment slot="title">
      Loop, <span class="text-accent dark:text-white highlight">Window Management Made Elegant</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Loop</span> is a free and open-source window manager for macOS. Simplify your window
        management with effortless controls and customizable options.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Loop: Simplify Your Workflow.</span>
      Save time and enhance productivity with intuitive window manipulation.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note>
    Loop is constantly evolving, with new features and improvements added regularly to enhance your window management
    experience on macOS.
  </Note>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Why Choose Loop?"
    subtitle="Discover how Loop revolutionizes window management on macOS."
    items={[
      {
        title: 'Radial Menu',
        description:
          'Manipulate windows using your mouse or trackpad with a radial menu triggered by a simple key press.',
        icon: 'tabler:circle',
      },
      {
        title: 'Preview Window',
        description:
          'See a live preview of window resizing before committing, ensuring precise control over your workspace.',
        icon: 'tabler:eye',
      },
      {
        title: 'Keyboard Shortcuts',
        description: 'Assign custom key combinations to initiate specific window actions for a faster workflow.',
        icon: 'tabler:keyboard',
      },
      {
        title: 'Cycles',
        description: 'Perform multiple window manipulations in quick succession by repeating key presses or clicks.',
        icon: 'tabler:repeat',
      },
      {
        title: 'Theming',
        description: 'Fully customize the appearance of the radial menu and preview window to match your style.',
        icon: 'tabler:palette',
      },
      {
        title: 'Open Source',
        description: 'Loop is open-source under the GNU GPLv3 license, welcoming contributions from the community.',
        icon: 'tabler:code',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Get Started"
    title="Effortless Window Control with Radial Menu"
    items={[
      {
        title: 'Intuitive Controls',
        description: 'Hold down the trigger key and move your cursor to easily move and resize windows.',
      },
      {
        title: 'Customizable Actions',
        description: 'Set up keyboard shortcuts and cycles to streamline your window management tasks.',
      },
      {
        title: 'Personalized Experience',
        description: 'Adjust the radial menu and preview window to your liking with extensive theming options.',
      },
    ]}
    image={{
      src: '~/assets/images/radial.gif',
      alt: 'Radial Menu',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Radial Menu &amp; Preview</h3>
      Experience a new way to interact with your windows using Loop's intuitive radial menu and live preview.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to Get Loop Up and Running"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Download Loop</span>',
        description:
          'Get Loop from Homebrew or download it directly from the release page to start simplifying your workflow.',
        icon: 'tabler:download',
      },
      {
        title: 'Step 2: <span class="font-medium">Set Up Your Trigger Key</span>',
        description:
          "Configure your preferred trigger key in Loop's settings to activate the radial menu and other features.",
        icon: 'tabler:keyboard',
      },
      {
        title: 'Step 3: <span class="font-medium">Customize Your Experience</span>',
        description:
          'Personalize Loop by adjusting the radial menu, preview window, and keyboard shortcuts to suit your needs.',
        icon: 'tabler:settings',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/loop-setup.png',
      alt: 'Loop Setup',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about Loop."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Is Loop compatible with my macOS version?',
        description: 'Loop is compatible with macOS 13 and later versions.',
      },
      {
        title: 'How do I install Loop using Homebrew?',
        description: 'Run `brew install loop` in your terminal to install Loop via Homebrew.',
      },
      {
        title: 'Can I customize the radial menu?',
        description: 'Yes, you can fully customize the radial menu’s width, shape, color, and toggle its visibility.',
      },
      {
        title: 'Is Loop really free?',
        description: 'Absolutely! Loop is free and open-source under the GNU GPLv3 license.',
      },
      {
        title: 'How can I contribute to Loop?',
        description:
          'Visit our GitHub repository to see the contributing guide and join our community of contributors.',
      },
      {
        title: 'Where can I report bugs or request features?',
        description: 'Please open an issue on our GitHub page to report bugs or suggest new features.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Downloads', amount: '50K+' },
      { title: 'Stars on GitHub', amount: '6.8K' },
      { title: 'Forks', amount: '100+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Download Loop Now',
        href: 'https://github.com/MrKai77/Loop/releases/latest/download/Loop.zip',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title"> Simplify Your Window Management with Loop </Fragment>

    <Fragment slot="subtitle">
      Download Loop today and experience a more efficient way to manage your workspace on macOS.
    </Fragment>
  </CallToAction>
</Layout>
